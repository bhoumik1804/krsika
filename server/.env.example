# Server Configuration
NODE_ENV="development"
PORT="5000"
API_VERSION="v1"

# MongoDB Configuration
MONGODB_URI="mongodb://localhost:27017"
MONGODB_DATABASE_NAME="mill-project"
MONGODB_TEST_DATABASE_NAME="mill-project-test"

# JWT Secrets (IMPORTANT: Use different secrets for access and refresh tokens)
ACCESS_TOKEN_SECRET="your-super-secret-access-token-key-min-32-characters-change-this-in-production"
ACCESS_TOKEN_EXPIRES_IN="15m"
REFRESH_TOKEN_SECRET="your-different-secret-refresh-token-key-min-32-characters-change-this-in-production"
REFRESH_TOKEN_EXPIRES_IN="7d"

# CORS Configuration (comma-separated for multiple origins)
CLIENT_URL="http://localhost:5173"
ALLOWED_ORIGINS="http://localhost:5173"

# Logging
LOG_LEVEL="debug"
LOG_DIR="logs"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:5000/api/v1/auth/google/callback"

# Super Admin Credentials
SUPER_ADMIN_1_NAME="Super Admin"
SUPER_ADMIN_1_EMAIL="admin@example.com"
SUPER_ADMIN_1_PASSWORD="securepassword123"
SUPER_ADMIN_1_PHONE="1234567890"

SUPER_ADMIN_2_NAME="Developer Admin"
SUPER_ADMIN_2_EMAIL="developer@example.com"

    {
      "name": "Socket.IO: admin:mills:list (Super Admin)",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "// Listen for response event",
              "pm.socketio.on('admin:mills:list:response', (data) => {",
              "    pm.test('admin:mills:list:response success', function () {",
